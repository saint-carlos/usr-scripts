#!/bin/bash

# AUTHOR:	(c) idank
# VERSION:	1.0
# LICENSE:	GPL (http://www.gnu.org/licenses/gpl.html)
# REQUIRES:
# NAME:		Binary
# DESCRIPTION:	tests if a file is binary or not

PROGRAM=`basename $0`
DESCRIPTION="tests if a file is binary or not"
PARAMS="filename"
OPTIONS="[-h]"

usage()
{
	[ $1 -ne 0 ] && exec >&2

	cat << EOF
$PROGRAM - $DESCRIPTION
usage:
$PROGRAM $OPTIONS $PARAMS

options:
-h	help: show this help message and exit.

exit status:
0	file is binary
1	file is text
2	if some arguments are bad
3	the file does not exist.
EOF

    exit $1
}

while getopts h option; do
	case $option in
		h) usage 0 ;;
		\?) usage 2 ;;
	esac
done
shift `expr $OPTIND - 1`

test $# -eq 1 || usage 2
FILE="$1"
test -f ${FILE} || exit 3
CHARSET=`file -bi "${FILE}" | cut -d= -f2`
test "${CHARSET}" = binary
