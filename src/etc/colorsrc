#!/bin/sh

declare -A __COLOR
__COLOR[black]=0
__COLOR[red]=1
__COLOR[green]=2
__COLOR[yellow]=3
__COLOR[blue]=4
__COLOR[magenta]=5
__COLOR[cyan]=6
__COLOR[white]=7
__COLOR[normal]=${__COLOR[white]}

case $TERM in
	xterm*|rxvt*|screen*)
			__color_seq()
			{
				[ -n "${__COLOR[$1]}" ] || set normal
				echo -en "\033[9${__COLOR[$1]}m"
			}
		;;
	linux|*)
			__color_seq()
			{
				[ -n "${__COLOR[$1]}" ] || set normal
				tput setaf ${__COLOR[$1]}
			}
		;;
esac
