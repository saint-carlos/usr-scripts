[user]
	name = CONFIG_USER_FULL_NAME
	email = CONFIG_USER_EMAIL

[log]
	decorate = full

[core]
	editor = vim
	pager = less -FXR
	excludesfile = CONFIG_ETC/gitignore
	whitespace = trailing-space,space-before-tab,indent-with-non-tab

[merge]
#	tool = kdiff3
	tool = bc3

[mergetool "bc3"]
	cmd = bcompare -automerge -reviewconflicts \"$LOCAL\" \"$BASE\" \"$REMOTE\" \"$MERGED\"

[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = true

[color "status"]
	added = green bold
	changed = blue bold
	untracked = yellow bold

[color "diff"]
	meta = yellow bold
	frag = cyan bold
	old = red bold
	new = green bold

[alias]
	brav = branch -avv
	addpatch = add -p
	llog = log --pretty=neat --date=short
	gcommit = cola
	histogram = log --stat --summary
	stat = show --stat --summary
	vomit = commit --verbose -s
	indiff = diff --cached
	hreset = reset --hard
	amend = commit --verbose --amend -a
	inspect = log --reverse --patch-with-stat --summary -U50
	review = show --patch-with-stat --summary -U50
	cmessage = log -1 --format="%s%n%n%b"

[pretty]
	neat = %C(cyan bold)%h %C(red bold)%ad %an %Creset%s%C(cyan bold)%d

#[difftool "diffmerge"]
#	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"

[diff]
	tool = bc3
	mnemonicprefix = true
	renames = copy
#	tool = diffmerge
[gc]
	reflogexpire = 180
	reflogexpireunreachable = 180
[branch]
	autosetuprebase = always
[rebase]
	autosquash = true
