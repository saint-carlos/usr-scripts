[user]
	name = USER_FULL_NAME_PLACEHOLDER
	email = USERMAIL_PLACEHOLDER

[log]
	decorate = full

[core]
	editor = vim
	pager = less -FXR
	excludesfile = ETC_PLACEHOLDER/gitignore

[merge]
#	tool = kdiff3
	tool = bc3

[mergetool "bc3"]
	cmd = bcompare -automerge -reviewconflicts \"$LOCAL\" \"$BASE\" \"$REMOTE\" \"$MERGED\"

[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = true

[color "status"]
	added = green bold
	changed = blue bold
	untracked = yellow bold

[color "diff"]
	meta = yellow bold
	frag = cyan bold
	old = red bold
	new = green bold	

[alias]
	branches = branch -a
	addpatch = add -p
	llog = log --pretty=neat
	gcommit = cola
	histogram = log --stat
	stat = show --stat
	vomit = commit --verbose
	indiff = diff --cached
	hreset = reset --hard

[pretty]
	neat = %C(cyan bold)%h %C(red bold)%ai %an %Creset%s%C(cyan bold)%d

#[difftool "diffmerge"]
#	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"

[diff]
	tool = bc3
	mnemonicprefix = true
	renames = copy
#	tool = diffmerge
[gc]
	reflogexpire = 180
	reflogexpireunreachable = 180
