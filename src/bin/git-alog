#!/bin/bash

PROGRAM=$(basename $0)
DESCRIPTION="git llog proportional to terminal lines"
PARAMS="[git-log args]"
OPTIONS="[-hf]"
DEFAULT_FRACTION="1/4"

usage()
{
	[ $1 -ne 0 ] && exec >&2

	cat << EOF
$PROGRAM - $DESCRIPTION
usage:
$PROGRAM $OPTIONS $PARAMS

options:
-h	help: show this help message and exit.
-f	fraction: fraction of the screen the log will take, default $DEFAULT_FRACTION.

exit status:
0	if all arguments are OK
2	bad arguments
otherwise it is the exit status from git-llog.
EOF

    exit $1
}

FRACTION="$DEFAULT_FRACTION"
while getopts hf: OPTION; do
	case $OPTION in
		h) usage 0 ;;
		f) FRACTION=$2; shift 2 ;;
		\?) usage 2 ;;
	esac
done
shift $((OPTIND - 1))

LINES=$(tput lines)
N=$(($LINES * $FRACTION))
exec git llog -$N "$@"
