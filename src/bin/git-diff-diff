#!/bin/bash

PROGRAM=$(basename $0)
DESCRIPTION="diff between diffs"
PARAMS="revision-range revision-range"
OPTIONS="[-h]"
DIFF_OPTS="--patch-with-stat --summary"

usage()
{
	[ $1 -ne 0 ] && exec >&2

	cat << EOF
$PROGRAM - $DESCRIPTION
usage:
$PROGRAM $OPTIONS $PARAMS
revision-range can be a single commit.

options:
-h	help: show this help message and exit.

exit status:
255	bad arguments
otherwise same as vimdiff
EOF
    exit $1
}

if [ "$1" = "-h" ]; then
	usage 0
fi
ARGS=( "$@" )
for ((i=0; i < ${#ARGS[@]}; i++)); do
	[ "${ARGS[i]}" = '--' ] && break
done
[ $i -ge 2 ] || usage 255
LIDX=$((i - 2))
RIDX=$((i - 1))
START=$LIDX
END=$i
LEFT="${ARGS[LIDX]}"
RIGHT="${ARGS[RIDX]}"
unset ARGS[LIDX]
unset ARGS[RIDX]
[[ "$LEFT" =~ ^- ]] && usage 255
[[ "$RIGHT" =~ ^- ]] && usage 255

case $LEFT in
	*..*) LEFT_CMD=diff ;;
	*) LEFT_CMD=show ;;
esac
LEFT_CMD="git $LEFT_CMD $DIFF_OPTS"
case $RIGHT in
	*..*) RIGHT_CMD=diff ;;
	*) RIGHT_CMD=show ;;
esac
RIGHT_CMD="git $RIGHT_CMD $DIFF_OPTS"
exec vimdiff -c 'set diffexpr=GitDiffDiff()' \
	<($LEFT_CMD "${ARGS[@]:0:${START}}" "$LEFT" "${ARGS[@]:${END}}") \
	<($RIGHT_CMD "${ARGS[@]:0:${START}}" "$RIGHT" "${ARGS[@]:${END}}")
