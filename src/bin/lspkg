#!/bin/bash

PROGRAM=$(basename $0)
DESCRIPTION="list installed dpkg packages"
PARAMS=""
OPTIONS="[-h]"

usage()
{
	[ $1 -ne 0 ] && exec >&2

	cat << EOF
$PROGRAM - $DESCRIPTION
usage:
$PROGRAM $OPTIONS $PARAMS

options:
-h	help: show this help message and exit.
EOF

    exit $1
}

while getopts he OPTION; do
	case $OPTION in
		h) usage 0 ;;
		\?) usage 255 ;;
	esac
done
shift $((OPTIND - 1))
exec dpkg --get-selections | grep -w install | awk '{ print $1 }'
