#!/bin/bash

PROGRAM=$(basename $0)
DESCRIPTION="list only directories."
PARAMS="[file ...]"
OPTIONS="[-h]"

usage()
{
	[ $1 -ne 0 ] && exec >&2

	cat << EOF
$PROGRAM - $DESCRIPTION
usage:
$PROGRAM $OPTIONS $PARAMS

options:
-h	help: show this help message and exit.

exit status:
if ls returned an error, this error is returned.
otherwise, it is 0.
EOF

    exit $1
}

while getopts h OPTION; do
	case $OPTION in
		h) usage 0 ;;
		\?) usage 1 ;;
	esac
done
shift $((OPTIND - 1))

{ ls -l "$@" || exit $?; } | mfilter ':$' '^total' '^d' '^$'
