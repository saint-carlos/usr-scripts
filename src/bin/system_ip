#!/bin/bash

PROGRAM=`basename $0`
DESCRIPTION="prints the machines IP in the LAN."
PARAMS=""
OPTIONS="[-ha]"

usage()
{
	[ $1 -ne 0 ] && exec >&2

	cat << EOF
$PROGRAM - $DESCRIPTION
usage:
$PROGRAM $OPTIONS $PARAMS

options:
-h	help: show this help message and exit.
-a	all: show all IPs, not just the first

exit status:
0	all OK
1	bad arguments
EOF

    exit $1
}

FILTER='head -1'
while getopts ha option; do
        case $option in
                h) usage 0 ;;
		a) FILTER=cat ;;
                \?) usage 1 ;;
        esac
done
shift `expr $OPTIND - 1`

hostname -I | tr ' ' '\n' | $FILTER
