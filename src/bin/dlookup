#!/usr/bin/env bash

PROGRAM=$(basename $0)
DESCRIPTION="grep the dictionary the dictionary"
PARAMS="word"
OPTIONS="[-h]"
RTL_DICTS=(CONFIG_RTL_DICTIONARIES)
LTR_DICTS=(CONFIG_LTR_DICTIONARIES)

usage()
{
	[ $1 -ne 0 ] && exec >&2

	cat << EOF
$PROGRAM - $DESCRIPTION
usage:
$PROGRAM $OPTIONS $PARAMS
the the entire word is grepped, so words containing the given word are not printed.
regular expressions may be used.
dictionaries to use:
$(tr ' ' '\n' <<< ${RTL_DICTS[*]} ${LTR_DICTS[*]} | grep .)

options:
-h	help: show this help message and exit.

exit status:
	0 if word is in the dictionary
	1 if word is not in the dictionary
	2 if arguments are bad
EOF
	exit $1
}

while getopts h OPTION; do
	case ${OPTION} in
		h) usage 0 ;;
		\?) usage 2 ;;
	esac
done
shift $((OPTIND - 1))

if [ $# -ne 1 ]; then
	usage 2
fi

grep --ignore-case --extended-regexp -x --no-filename "$1" "${LTR_DICTS[@]:-/dev/null}" && exit 0
grep --ignore-case --extended-regexp -x --no-filename "$1" "${RTL_DICTS[@]:-/dev/null}" | rev
[ ${PIPESTATUS[0]} -eq 0 ] && exit 0
exit 1
