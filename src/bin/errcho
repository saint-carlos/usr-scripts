#!/bin/bash

PROGRAM=$(basename $0)
DESCRIPTION="echo to stderr."
PARAMS=""
OPTIONS="[-h]"

usage()
{
	[ $1 -ne 0 ] && exec >&2

	cat << EOF
$PROGRAM - $DESCRIPTION
usage:
$PROGRAM $OPTIONS $PARAMS

options:
-h	help: show this help message and exit.
EOF

	exit $1
}

while getopts nh OPTION; do
	case $OPTION in
		h) usage 0 ;;
		\?) usage 1 ;;
	esac
done
shift $((OPTIND - 1))

echo "$@" >&2
