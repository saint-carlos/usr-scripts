#!/bin/bash

PROGRAM=`basename $0`
DESCRIPTION="calculate with bash"
PARAMS="expression"
OPTIONS="[-h]"

usage()
{
	[ $1 -ne 0 ] && exec >&2

	cat << EOF
$PROGRAM - $DESCRIPTION
usage:
$PROGRAM $OPTIONS $PARAMS
since * is usually used for shell globbing, x can be used instead.

options:
-h	help: show this help message and exit.
EOF

    exit $1
}
while getopts h option; do
    case $option in
        h) usage 0 ;;
        \?) usage 1 ;;
    esac
done
shift `expr $OPTIND - 1`

echo $((${*/x/*}))
