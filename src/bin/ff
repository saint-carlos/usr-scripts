#!/bin/bash

PROGRAM=`basename $0`
DESCRIPTION="find a file by name pattern"
PARAMS="name-pattern"
OPTIONS="[-h]"

usage()
{
	[ $1 -ne 0 ] && exec >&2

	cat << EOF
$PROGRAM - $DESCRIPTION
usage:
$PROGRAM $OPTIONS $PARAMS

options:
-h	help: show this help message and exit.

exit status:
255	if some arguments are bad
otherwise, it is the exit status of 'find'.
EOF

    exit $1
}


while getopts h option; do
    case $option in
        h) usage 0 ;;
        \?) usage 255 ;;
    esac
done
shift `expr $OPTIND - 1`

test $# -eq 1 || usage 255

find . -type f -name "$1"
