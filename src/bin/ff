#!/bin/bash

PROGRAM=$(basename $0)
DESCRIPTION="find a file by name pattern"
PARAMS="name-pattern [where...]"
OPTIONS="[-he]"

usage()
{
	[ $1 -ne 0 ] && exec >&2

	cat << EOF
$PROGRAM - $DESCRIPTION
usage:
$PROGRAM $OPTIONS $PARAMS

options:
-h	help: show this help message and exit.
-e	exact: search for exact file name.

exit status:
255	if some arguments are bad
otherwise, it is the exit status of 'find'.
EOF

    exit $1
}

TEST=iname DECORATION="*"
while getopts he OPTION; do
	case $OPTION in
		h) usage 0 ;;
		e) TEST=name DECORATION="" ;;
		\?) usage 255 ;;
	esac
done
shift $((OPTIND - 1))
WHAT="$1"
shift
if [ $# -eq 0 ]; then
	set .
fi

exec find "$@" -type f "-${TEST}" "${DECORATION}${WHAT}${DECORATION}"
