#!/bin/bash

declare -r PROGRAM=$(basename $0)
declare -r DESCRIPTION="return the length, in characters, of the argument"
declare -r PARAMS="text..."
declare -r OPTIONS="[-hm]"

usage()
{
	[ $1 -ne 0 ] && exec >&2

	cat << EOF
$PROGRAM - $DESCRIPTION
usage:
$PROGRAM $OPTIONS $PARAMS

options:
-m	multiple: treat every argument as a separate string.
-h	help: show this help message and exit.

exit status:
0	all OK
2	argument are bad
EOF

	exit $1
}

declare MULTI=false
while getopts hm OPTION; do
	case $OPTION in
		h) usage 0 ;;
		m) MULTI=true ;;
		\?) usage 2 ;;
	esac
done
shift $((OPTIND - 1))

if $MULTI; then
	while [ $# -gt 0 ]; do
		printf "%d %s\n" "${#1}" "$1"
		shift 1
	done
else
	declare ARG="$*"
	printf "%d\n" "${#ARG}"
fi
