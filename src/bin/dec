#!/bin/bash

PROGRAM=$(basename $0)
DESCRIPTION="print decimal numbers with comma"
PARAMS="[num]..."
OPTIONS="[-h]"

usage()
{
	[ $1 -ne 0 ] && exec >&2

	cat << EOF
$PROGRAM - $DESCRIPTION
usage:
$PROGRAM $OPTIONS $PARAMS

options:
-h	help: show this help message and exit.

exit status:
0	if all arguments are OK
1	if some arguments are bad
EOF

    exit $1
}


while getopts h OPTION; do
	case $OPTION in
		h) usage 0 ;;
		\?) usage 1 ;;
	esac
done
shift $((OPTIND - 1))

if [ $# -eq 0 ]; then
	exit 0
fi
exec printf "%'ld\n" "$@"
