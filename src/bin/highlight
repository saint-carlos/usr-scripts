#!/bin/bash

PROGRAM=`basename $0`
DESCRIPTION="highlight a given string from stdin"
PARAMS="regexp-to-highlight"
OPTIONS="[-h]"

usage()
{
	[ $1 -ne 0 ] && exec >&2

	cat << EOF
$PROGRAM - $DESCRIPTION
usage:
$PROGRAM $OPTIONS $PARAMS

options:
-h	help: show this help message and exit.

exit status:
2	arguments are bad
otherwise it is the exit status of sed
EOF

    exit $1
}

while getopts h option; do
    case $option in
        h) usage 0 ;;
        \?) usage 2 ;;
    esac
done
shift `expr $OPTIND - 1`

if [ $# != 1 ]; then # what to hightlight?
    usage 2
fi

sed -r "s/$1/`tput smso`&`tput rmso`/g"
